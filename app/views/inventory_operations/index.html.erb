<h1>Listing inventory_operations</h1>

<table>
  <tr>
    <th>Item</th>
    <th>From location</th>
    <th>To location</th>
    <th>Type</th>
    <th>Amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @inventory_operations.each do |inventory_operation| %>
  <tr>
    <td><%= Item.find(inventory_operation.item_id).name %></td>
    <td><%= inventory_operation.from_location_name %></td>
    <td><%= inventory_operation.to_location_name %></td>
    <td><%= inventory_operation.operation_type %></td>
    <td><%= inventory_operation.amount %></td>
    <td><%= link_to 'Show', inventory_operation %></td>
    <td><%= link_to 'Edit', edit_inventory_operation_path(inventory_operation) %></td>
    <td><%= link_to 'Destroy', inventory_operation, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

