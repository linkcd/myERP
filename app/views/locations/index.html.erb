<h1>Listing locations</h1>
<div class=" ">
<table class="table">
<thead>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @locations.each do |location| %>
  <tr>
    <td><%= location.id %></td>
    <td><%= location.name %></td>
    <td><%= location.description %></td>
    <td><%= link_to 'Show inventory', inventory_location_path(location) %></td>
    <td>
        <div class = "btn-group" >
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#" >
                Action
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li><%= link_to 'Show', location %></li>
                <li><%= link_to 'Edit', edit_location_path(location) %></li>
                <li class="divider" ></li>
                <li><%= link_to 'Destroy', location, confirm: 'Are you sure?', method: :delete %></li>
            </ul>
        </div>
    </td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Location', new_location_path, :class => "btn" %>
</div>
